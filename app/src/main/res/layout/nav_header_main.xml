<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_navigation_bg"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="@dimen/nav_header_profile_width"
        android:layout_height="@dimen/nav_header_profile_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="@dimen/nav_header_arrow_width"
        android:layout_height="@dimen/nav_header_arrow_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profileImageView"
        android:layout_marginLeft="@dimen/nav_header_text_margin_left"
        android:layout_marginTop="@dimen/nav_header_text_margin_top"
        android:layout_toLeftOf="@id/arrowImageView"
        android:layout_toRightOf="@id/profileImageView"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_header_welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/color_navigation_welcome_txt_color"
        android:textSize="@dimen/nav_header_welcome_text_size" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginLeft="@dimen/nav_header_text_margin_left"
        android:layout_toLeftOf="@id/arrowImageView"
        android:layout_toRightOf="@id/profileImageView"
        android:text="@string/nav_header_name"
        android:textColor="@color/color_navigation_name_txt_color"
        android:textSize="@dimen/nav_header_name_text_size" />


</RelativeLayout>
